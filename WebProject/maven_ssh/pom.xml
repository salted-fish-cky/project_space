  <groupId>com.cky.maven.ssh</groupId>
  <artifactId>maven_ssh</artifactId>
  <packaging>war</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>maven_ssh Maven Webapp</name>
  <url>http://maven.apache.org</url>
  <dependencies>

    <dependency>
