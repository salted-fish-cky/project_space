<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.cky.maven.ssh.entities.User" table="user" schema="test">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="account">
            <column name="account" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="nickname">
            <column name="nickname" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="gender">
            <column name="gender" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="tel">
            <column name="tel" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>